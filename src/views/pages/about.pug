extends ../main.layout.pug

block variables
  - var title = 'Обо мне'

block scripts
  script(src='about.bundle.js')

block content
  section.hero
    .hero__links
      -
        var socials = [
          ['github','http://vk.com'],
          ['envelope','http://gh.com'],
          ['check','http://in.com']
        ]
      +socials(socials,'socials_common')

      a(href="#").hamburger.hero__menu
        +icon('hamburger', 'hamburger__link-icon')

    .hero__title
      .section-title
        img(src="", alt="").section-title__pic
      
      .user.hero__user
        .user__pic
          img(src="", alt="").iser__pic-img
        .user__description
          .user__name Иван Щербаков
          .user__info Личный сайт веб разработчика

    .hero__down-btns
      a(href="#").down-btn

  section.about
    .about__left
      .about__triangle
        svg.triangle.triangle_fill_white
      .about__left-title
        .block-title Обо мне
      .about__left-content
        .user-description
          .user-description__image
            img(src="", alt="").user-description__avatar
          .user-description__date
            .user-description__title
              .block-subtitle Кто я
            .user-description__text.text-content
              p Lorem, ipsum dolor sit amet consectetur adipisicing elit. Veritatis quia, autem explicabo temporibus tenetur modi obcaecati earum provident illo natus quibusdam est, praesentium placeat deserunt, dolore mollitia eum. Quisquam, fuga!
              p Lorem, ipsum dolor sit amet consectetur adipisicing elit. Veritatis quia, autem explicabo temporibus tenetur modi obcaecati earum provident illo natus quibusdam est, praesentium placeat deserunt, dolore mollitia eum. Quisquam, fuga!
    .about__right
      .about__triangle
        svg.triangle.triangle_fill_beige
      .about__right-title
        .block-subtitle Чем я могу быть вам полезен
      .about__right-description.text-content
        p Lorem ipsum, dolor sit amet consectetur adipisicing elit. Iusto quod minima provident asperiores vero totam voluptates maiores error impedit pariatur ullam praesentium tenetur amet accusantium sit animi explicabo, hic quisquam.
      .about__right-content
        -
          var skills = [
            ['FrontEnd',[['html5',10],['css3',30],['javaScript & jQuery',70]]],
            ['BackEnd',[['php',30],['mySql',30],['Node.js & npm',70],['mongoDB',35]]],
            ['WorkFlow',[['git',55],['gulp',30],['Bower',70]]],
          ]
        ul.skills-list
          each skillrow in skills
            //- console.log(skillrow[1][0])
            li.skills-list__item.skills-row
              .skills-row__title #{skillrow[0]}
              ul.skills-row__list
                each skill in skillrow[1]
                  li.skill-row__item
                    figure.skill
                      svg(viewBox="0 0 100 100" preserveAspectRatio="none").skill__figure
                        circle(cx="50" cy="50" r="50").skill__circle.skill__circle_under
                        circle(cx="50" cy="50" r="25").skill__circle.skill__circle_above
                      .skill__title #{skill[0]}
  section.map
    .google-map
    .map__data
      .contacts
        h2.contacts__title
          .block-subtitle Контакты
        address.contact__data
          ul.contacts__list
            -
              var contacts = [
                ['skype','stil_82'],
                ['icq','268151418'],
                ['phone','8-903-272-1111']
              ]
            each contact in contacts
              li.contacts__item.contacts-row
                .contacts-row.contacts__icon
                  +icon(`${contact[0]}`, 'contacts__item-icon')
                .contacts-row.contacts__title #{contact[1]}
  footer.footer
    .footer__row
      .footer__col
        nav.menu
          ul.menu__list
            each item in ['Мои работы','Блог','Обо мне','Авторизация']
              li.menu__item
                a(href="#").menu__link #{item}
      .footer__col.footer__col_justify_end
        +socials(socials,'socials_round')
